@model CreateUserVM

@{

    ViewBag.Title = "Registrera ny användare";
}
<body>
    <h1 style="text-align: center">Fyll i dina uppgifter</h1>
    <div asp-validation-summary="ValidationSummary.All"></div>
    <form asp-controller="Users" asp-action="Create">

        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="FirstName"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="FirstName" class="form-control" placeholder="Förnamn">
                    <span asp-validation-for="FirstName"></span>
                </div>
            </div>
            <div class="row" style="color:transparent"> .</div>
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="LastName"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="LastName" class="form-control" placeholder="Efternamn">
                    <span asp-validation-for="LastName"></span>
                </div>
            </div>
            <div class="row" style="color:transparent"> .</div>
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="Email"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Email" class="form-control" placeholder="Ex. kalle@gmail.com">
                    <span asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="row" style="color:transparent"> .</div>
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="VerifiedEmail"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="VerifiedEmail" class="form-control" placeholder="Ex. kalle@gmail.com">
                    <span asp-validation-for="VerifiedEmail"></span>
                </div>
            </div>
            <div class="row" style="color:transparent"> .</div>
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="PhoneNumber"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Ex. 0708460256">
                    <span asp-validation-for="PhoneNumber"></span>
                </div>
            </div>
            <div class="row" style="color:transparent"> .</div>
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="Password"></label>
                </div>
                <div class="col-sm-4">
                    <input type="password" asp-for="Password" class="form-control" placeholder="Lösenord">
                    <span asp-validation-for="Password"></span>
                </div>
            </div>
            <div class="row" style="color:transparent"> .</div>
            <div class="row">
                <div class="col-sm-2">
                    <label>Upprepa</label> <label asp-for="VerifiedPassword"></label><label>et </label>
                </div>
                <div class="col-sm-4">
                    <input type="password" asp-for="VerifiedPassword" class="form-control" placeholder="Lösenord">
                    <span asp-validation-for="VerifiedPassword"></span>
                </div>
            </div>
            <div class="row" style="color:transparent"> .</div>
            <div class="row">
                <div class="col-sm-2">
                    <input type="submit" value="Registrera" class="btn btn-success" style="background-color: forestgreen" />
                </div>
                <div class="col-sm-4">
                </div>
            </div>
        </div>

    </form>
    <environment names="Development">
        <script src="~/Scripts/jquery.js"></script>
        <script src="~/Scripts/jquery.validate.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    </environment>
    <environment names="Production">
        <script src="~/Scripts/jquery.min.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    </environment>
</body>
