
@model CreateProductVM
@{
    ViewBag.Title = "Lägg till en produkt";
}

<body>
    <h2 style="text-align: left">Fyll i uppgifter för att lägga till en produkt</h2>
    <div asp-validation-summary="ValidationSummary.All"></div>
    <form asp-controller="Products" asp-action="CreateProduct">

        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Name" placeholder="Produktnamn">
                    <span asp-validation-for="Name"></span>
                </div>
            </div>
            <div class="row" style="color:transparent"> .</div>
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="Stock"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Stock" placeholder="Antal">
                    @*Hur göra för att få placeholder att fungera? 0 förinställt som värde nu då det är en int......*@
                    <span asp-validation-for="Stock"></span>
                </div>
            </div>
            <div class="row" style="color:transparent"> .</div>
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="Description"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Description" placeholder="Beskrivning">
                    <span asp-validation-for="Description"></span>
                </div>
            </div>
            <div class="row" style="color:transparent"> .</div>
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Price" placeholder="Pris">
                    @*Hur göra för att få placeholder att fungera? 0 förinställt som värde nu då det är en int......*@
                    <span asp-validation-for="Price"></span>
                </div>
            </div>
            <div class="row" style="color:transparent"> .</div>
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="SelectedCategoryId"></label>
                </div>
                <div class="col-sm-4">
                    <select asp-for="SelectedCategoryId" placeholder="Välj kategori"
                            asp-items="Model.CategoryIdList"></select>
                    <span asp-validation-for="SelectedCategoryId"></span>
                </div>
            </div>
            <div class="row" style="color:transparent"> .</div>
            <div class="row">
                <div class="col-sm-2">
                    <input type="submit" value="Lägg till" />
                </div>
                <div class="col-sm-4">
                </div>
                <div class="row" style="color:transparent"> .</div>
                <div class="row" style="color:transparent"> .</div>
            </div>
        </div>

    </form>
    <environment names="Development">
        <script src="~/Scripts/jquery.js"></script>
        <script src="~/Scripts/jquery.validate.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    </environment>
    <environment names="Production">
        <script src="~/Scripts/jquery.min.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    </environment>
</body>
