@using KickAss2.ViewModels
@model List<OrderHistoryVM>
<div> @Html.Partial("LogInNavBar",Model.First().CurrentUser)</div>
<link href="~/css/kickass.css" rel="stylesheet" />

<div id="row1" class="row" style="padding: 5px" ; text-align center>
    <div class="col-sm-12">
        <h1 style="text-align: center; font-weight: bold">Min orderhistorik</h1>
        <hr />
    </div>
</div>
<div id="row2" class="row" style="padding: 5px; text-align: center">
    <div class="col-sm-4">
        <table style="width: 100%">
            <tr>
                <th style="text-align: left">Orderdatum</th>
                <th style="text-align: left">Order ID</th>
                <th style="text-align: left">Summa</th>
            </tr>
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="text-align: left">@item.OrderDate</td>
                        <td style="text-align: left">@item.OrderId</td>
                        <td style="text-align: left">@item.TotalPrice</td>
                    </tr>
                }
            }
        </table>

    </div>

    <div class="col-sm-4">
        <h4 style="text-align: left; font-weight: bold"></h4>
        <p style="text-align: left"><a href="/Order/OrderHistory"></a></p>
    </div>

    <div class="col-sm-4">
        <h4 style="text-align: left; font-weight: bold"></h4>
        <p style="text-align: left"><a href="#categoriIdPennor"></a></p>
    </div>
</div>
