@model LogInUserVM
<div asp-validation-summary="ValidationSummary.All"></div>
<form asp-controller="Home" asp-action="LogIn">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-2">
                <label asp-for="Email"></label>

            </div>
            <div class="col-sm-3">
                <input asp-for="Email" type="email" class="form-control" placeholder="E-post">
                <span asp-validation-for="Email"></span>
            </div>
        </div>
        <div class="row" style="color:transparent"> .</div>
        <div class="row">
            <div class="col-sm-2">
                <label asp-for="Password"></label>

            </div>
            <div class="col-sm-3">
                <input asp-for="Password" type="password" class="form-control" placeholder="Lösenord">
                <span asp-validation-for="Password"></span>

            </div>
        </div>
    </div>
    <div class="row"><p style="color: transparent">.</p></div>
    <div class="row">
        <div class="col-sm-2">
            <input type="submit" value="Logga in" class="btn btn-success" style="background-color: forestgreen" />
        </div>
        <div class="col-sm-3">
            <label><input type="checkbox"> Kom ihåg mig</label>
        </div>
    </div>
</form>
<environment names="Development">
    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</environment>
<environment names="Production">
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</environment>




